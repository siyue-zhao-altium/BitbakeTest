mainmenu "Image Builder"

menu "Selection"
choice
	prompt "Select the Image builder you want to use"
	default HELLO_WORLD

	config HELLO_WORLD
	bool "Hello world takes 5 mins"

	config KAS_INCLUDE_HELLOWORLD
	string
	depends on HELLO_WORLD
	default "helloWorld5min.yaml"

	config DUMMY_FAST
	bool "Dummy image takes 10s to build"

	config KAS_INCLUDE_DUMMY_FAST
	string
	depends on DUMMY_FAST
	default "dummy10s.yaml"
endchoice
endmenu

menu "Set a string"
	config SET_STRING
	bool "Set value for a string"
	default n
	help
		Set the machine that the SDK is built to be installed on.
		Available options provided by OpenEmbedded-Core are: aarch64,
		i586, i686, ppc64, ppc64le, and x86_64.

	config STRING
	depends on SET_STRING
	string "STRING"
	default "jay test"
	help
		Set the machine that the SDK is built to be installed on.
		Available options provided by OpenEmbedded-Core are: aarch64,
		i586, i686, ppc64, ppc64le, and x86_64.
endmenu